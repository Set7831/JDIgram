<h2>Редактирование профиля</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#panel1">Основные настройки</a></li>
    <li><a data-toggle="tab" href="#panel2">Безопасность</a></li>
  </ul>
  <div class="tab-content">
    <div id="panel1" class="tab-pane fade in active">
      <h3>Основные настройки</h3>
      <p><div class="form-group">
      <%= f.fields_for :profile do |profile_form| %>
        <div class="form-group">
          <%= profile_form.label :surname, "Фамилия" %>
          <%= profile_form.text_field :surname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= profile_form.label :name, "Имя"%>
          <%= profile_form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= profile_form.label :patronymic, "Отчество" %>
          <%= profile_form.text_field :patronymic, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= profile_form.label :date_of_birth, "Дата рождения" %>
          <%= profile_form.date_field :date_of_birth, class: "form-control" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :username, "Логин" %><br />
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

    </div></p>
    </div>
    <div id="panel2" class="tab-pane fade">
      <h3>Безопасность</h3>
      <p>
      <div class="form-group">
        <%= f.label :password, "Пароль" %> <i>(оставьте пустым, если вы не хотите его менять)</i><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> символом минимум</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "Текущий пароль" %> <i>(нам нужен ваш текущий пароль для подтверждения изменений)</i><br />
        <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
      </div></p>
    </div>
  </div>



  <div class="actions">
    <%= f.submit "Обновить", class: "btn btn-primary"  %>
  </div>
<% end %>

<h3>Удалить мой аккаунт</h3>

<p>Недовольны? <%= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary"  %></p>

<%= link_to "Назад", :back , class: "btn btn-primary"  %>
